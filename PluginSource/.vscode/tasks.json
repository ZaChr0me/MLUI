{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "build Executable",
			"command": "make",
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"args": ["TYPE=executable"]
		},
		{
			"type": "cppbuild",
			"label": "build Library",
			"command": "make",
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"args": ["TYPE=library", "NAME=ProjectPlugin.dll"]
		}
	]
}
